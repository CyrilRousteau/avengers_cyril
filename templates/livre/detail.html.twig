{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/livres.css') }}">
{% endblock %}

{% block header %}
<table class="tableau-livres">
    <tbody>
        <tr>
            <th>Titre</th>
            <td>{{ livre.titre }}</td>
        </tr>
        <tr>
            <th>Date de Publication</th>
            <td>{{ livre.datePublication | date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Auteur</th>
            <td>{{ livre.auteur.nom }} {{ livre.auteur.prenom }}</td>
        </tr>
    </tbody>
</table>
